<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_8"
    tools:context=".html">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8">
<!--question 1-->
<LinearLayout
            android:id="@+id/qa_layout_1"
            android:layout_marginBottom="@dimen/dimen_16"
            android:background="@drawable/border_drawable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/radio_question_1"
                style="@style/MyTextView"
                 />
 
            <RadioGroup
                android:id="@+id/radio_group_answer_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dimen_8">

                <RadioButton
                    android:id="@+id/radio_answer_1_a"
                    style="@style/MyRadioButton"
                    android:contentDescription="option"
                    android:text="Canvas" />

                <RadioButton
                    android:id="@+id/radio_answer_1_b"
                    style="@style/MyRadioButton"
                    android:contentDescription="option"
                    android:text="Audio and Video" />

                <RadioButton
                    android:id="@+id/radio_answer_1_c"
                    style="@style/MyRadioButton"
                    android:contentDescription="option"
                    android:text="Geolocation" />

                <RadioButton
                    android:id="@+id/radio_answer_1_d"
                    style="@style/MyRadioButton"
                    android:contentDescription="option"
                    android:text="All of the above" />
            </RadioGroup>
        </LinearLayout>
<!--/question 1-->
